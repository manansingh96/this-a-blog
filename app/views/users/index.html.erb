<h1 class="text-center mt-4">This A Bloggers</h1>
<div class="container pagination justify-content-center mt-4">
  <%= paginate @users %>
</div>
<div class="container">
  <% @users.each do |user|%>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic">
            <%= link_to user.username, user_path(user) %>
          </div>
          <div class="card-body m-3">
            <%= link_to gravatar_for(user, size: 150), user_path(user) %>
            <p class="card-text m-3"><%= pluralize(user.articles.count, 'article') %></p>
            <%= link_to 'View Profile', user_path(user), class: 'btn btn-primary', type:'button' %>
            </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="container pagination justify-content-center mt-4">
  <%= paginate @users %>
</div>