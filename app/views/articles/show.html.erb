<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <h2 class="card-title text-center p-3"><%= @article.title.capitalize %></h2>
      <div class="card text-center shadow mb-5 bg-body rounded">
        <div class="card-header fst-italic">
          by <%= @article.user.username %>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%= simple_format(@article.description) %></div>
          <div class="btn-group" role="group">
            <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary', type:'button' %>
            <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you shure?' }, class: 'btn btn-primary', type:'button' %>
            <%= link_to 'Return to Articles List', articles_path, class: 'btn btn-primary', type:'button'  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>