<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: 'p-5 shadow bg-body rounded clearfix', local: true) do |f|%>
        <div class="input-group row m-3">
          <%= f.label :title, class: 'col-2 col-form-label' %><br/>
          <div class="col-10">
            <%= f.text_field :title, class: 'form-control shadow rounded' %>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
        </div>
        <div class="input-group row m-3">
          <%= f.label :description, class: 'col-2 col-form-label' %><br/>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: 'form-control shadow rounded'%>
          </div>
        </div>
        <div class="btn-group float-end align-items-center" role="group">
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to 'Cancel Edit', articles_path, class: 'btn btn-outline-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>